  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite",
      "runtimeExecutable": "vite",
      "cwd": "${workspaceFolder}",
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite in watch mode",
      "runtimeExecutable": "vite",
      "cwd": "${workspaceFolder}",
      "args": ["--watch"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite in production mode",
      "runtimeExecutable": "vite",
      "cwd": "${workspaceFolder}",
      "args": ["--mode", "production"]
    }
  ]
}
